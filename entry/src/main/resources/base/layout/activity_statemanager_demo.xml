    <Text
        ohos:id="$+id:show_core"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:top_margin="20fp"
        ohos:text="显示core" />
    <Text
        ohos:id="$+id:statemanager_demo"
        ohos:width="match_content"
